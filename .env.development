# 本地开发环境配置
# 运行模式：local（本地模拟）/ cloud（云服务）
VITE_RUN_MODE=local

# 本地模拟配置
VITE_LOCAL_STORAGE_TYPE=localStorage
VITE_LOCAL_MAX_FILE_SIZE=10485760
VITE_LOCAL_MOCK_USER_ID=local_demo_user
VITE_LOCAL_MOCK_DELAY=300

# UniCloud配置（云服务模式时使用）
VITE_UNICLOUD_SPACE_ID=
VITE_UNICLOUD_CLIENT_SECRET=
VITE_UNICLOUD_ENDPOINT=

# API配置
# 方式1: 直接配置完整URL（优先级最高）
# VITE_API_BASE_URL=http://192.168.1.100:3000

# 方式2: 分组配置（当没有VITE_API_BASE_URL时使用）
VITE_API_HOST=localhost
VITE_API_PORT=3000
VITE_API_PROTOCOL=http
VITE_API_TIMEOUT=30000

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
VITE_ALLOWED_VIDEO_TYPES=mp4,mov,avi,mkv,webm

# 开发配置
VITE_ENABLE_MOCK=true
VITE_ENABLE_DEBUG=true
VITE_ENABLE_CONSOLE_LOG=true